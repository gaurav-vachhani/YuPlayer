<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".PlayerActivity" android:id="@+id/fragment_play_list_rl_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:id="@+id/fragment_play_list_ll_text"
        android:layout_marginRight="80dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="---"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:id="@+id/fragment_play_list_txt_song"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="---"
            android:layout_marginLeft="15dp"
            android:textSize="14dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_below="@id/fragment_play_list_txt_song"
            android:id="@+id/fragment_play_list_txt_artist"
            />
    </RelativeLayout>

   <LinearLayout
       android:layout_width="80dp"
       android:layout_height="80dp"
       android:layout_alignParentRight="true"
       android:id="@+id/fragment_play_list_ll_image"
       >
       <ImageView
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:layout_marginTop="15dp"
           android:layout_marginBottom="15dp"
           android:src="@drawable/play"
           android:id="@+id/fragment_play_list_imgV_status" />


   </LinearLayout>
</RelativeLayout>
