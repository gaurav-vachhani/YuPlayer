<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:id="@+id/player_notification_ll_text"
    android:layout_toLeftOf="@+id/player_notification_ll_image"
    android:layout_toStartOf="@+id/player_notification_ll_image">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/player_notification_imgV_songImage"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="---"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:id="@+id/player_notification_txt_song"
        android:layout_toRightOf="@+id/player_notification_imgV_songImage"
        android:layout_toEndOf="@+id/player_notification_imgV_songImage" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="---"
        android:textSize="14dp"
        android:layout_below="@id/player_notification_txt_song"
        android:id="@+id/player_notification_txt_artist"
        android:layout_toRightOf="@+id/player_notification_imgV_songImage"
        android:layout_toEndOf="@+id/player_notification_imgV_songImage"
        android:ellipsize="end"
        android:singleLine="true"/>
</RelativeLayout>

<LinearLayout
    android:layout_width="140dp"
    android:layout_height="80dp"
    android:layout_alignParentRight="true"
    android:id="@+id/player_notification_ll_image"
    >
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:src="@android:drawable/ic_media_rew"
        android:id="@+id/player_notification_imgV_previous" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:src="@android:drawable/ic_media_play"
        android:id="@+id/player_notification_imgV_status" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:src="@android:drawable/ic_media_ff"
        android:id="@+id/player_notification_imgV_forward" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:id="@+id/player_notification_imgV_cancel" />


</LinearLayout>



</RelativeLayout>
